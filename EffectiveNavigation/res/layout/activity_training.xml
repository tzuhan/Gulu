<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drinks_spinner"
        android:layout_above="@+id/send_training_data_button"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="80dp"
        android:layout_centerInParent="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send features and label"
        android:id="@+id/send_training_data_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Information"
        android:id="@+id/InformationAboutDataText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save model"
        android:id="@+id/save_model_button"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/send_training_data_button"
        android:layout_alignLeft="@+id/InformationAboutDataText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load model"
        android:id="@+id/load_model_button"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/save_model_button"
        android:layout_alignRight="@+id/InformationAboutDataText" />

</RelativeLayout>