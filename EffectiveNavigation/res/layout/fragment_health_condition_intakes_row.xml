<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ingredient"
        android:id="@+id/hc_ingredient_name"
        android:paddingTop="15dp"
        android:layout_gravity="center_horizontal"
        android:typeface="sans"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kcal"
        android:id="@+id/hc_unit_measurement"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/hc_seekBarValue"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10px"
        android:textSize="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/hc_seekBarValue"
        android:layout_gravity="right"
        android:paddingRight="10dp"
        android:layout_below="@+id/hc_ingredient_name"
        android:layout_toLeftOf="@+id/hc_unit_measurement"
        android:textSize="16dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hc_goal_bar"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:progress="50"
        android:paddingBottom="12dp"
        android:layout_below="@+id/hc_unit_measurement"
        android:layout_alignParentLeft="true" />

</RelativeLayout>